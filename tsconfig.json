{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "allowJs": true,
    "jsx": "react",
    "target": "es2017",
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "es2017"
    ]
  },
  "include": [
    "src/**/*.ts*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules/**",
    "src/**/*.test.ts*",
    "src/__mocks__/*"
  ]
}
